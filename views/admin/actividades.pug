extends layout


block content
    <div calss="container">
        <form class="form">
            <div class="row justify-content-end mb-4">
                <div class="col-auto">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Edicion</option>
                        <option value="1">2021</option>
                        <option value="2">2020</option>
                        <option value="3">2019</option>
                    </select>
                </div>
                <div class="col-auto">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Día</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="3">4</option>
                        <option value="3">5</option>
                    </select>
                </div>
                <div class="col-auto">
                    <div class="input-group rounded">
                        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                        <button class="input-group-text border-0" id="search-addon">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">Inicio</th>
                <th scope="col">Fin</th>
                <th scope="col">Tipo</th>
                <th scope="col">Enlace</th>
                <th scope="col">Opciones</th>
            </tr>
        </thead>
        <tbody>
            each actividad in data
                <tr>
                    th(scope="row")=actividad.dataValues.id
                    td=actividad.dataValues.nombre
                    td=actividad.dataValues.descripcion
                    td=actividad.dataValues.fechaInicio
                    td=actividad.dataValues.fechaFin
                    if actividad.dataValues.isProtocolar
                        td='Protocolar'
                    else if actividad.dataValues.isPonencia
                        td='Ponencia'
                    else if actividad.dataValues.isPanel
                        td='Panel'
                    else if actividad.dataValues.isConcurso
                        td='Concurso'
                        
                    td=actividad.dataValues.enlaceReunion
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            a(href='/admin/actividades/eliminar/' + actividad.dataValues.id type="button" class="btn btn-danger") Eliminar
                            a(href='/admin/actividades/editar/' + actividad.dataValues.id type="button" class="btn btn-warning") Editar
                        </div>
                    </td>
                </tr>
        </tbody>
    </table>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-auto">
                <a href="/admin/actividades/agregar" type="button" class="btn btn-dark"><i class="fas fa-plus"></i>agregar</a>
            </div>
        </div>
    </div>





block append styles
    link(rel="stylesheet", href="/admin/css/actividades.css")
