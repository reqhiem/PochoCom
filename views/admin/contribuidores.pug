extends layout

block content
    <div calss="container">
        <form class="form">
            <div class="row justify-content-end mb-4">
                <div class="col-auto">
                    <div class="input-group rounded">
                        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                        <button class="input-group-text border-0" id="search-addon">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    .container
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellido Paterno</th>
                    <th scope="col">Apellido Materno</th>
                    <th scope="col">Especialidad</th>
                    <th scope="col">Descripci√≥n</th>
                    <th scope="col">Email</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                each contribuidor in data
                    <tr>
                        th(scope="row")=contribuidor.dataValues.id
                        td=contribuidor.dataValues.nombre
                        td=contribuidor.dataValues.apellPaterno
                        td=contribuidor.dataValues.apellMaterno
                        td=contribuidor.dataValues.especialidad
                        td=contribuidor.dataValues.descripcion
                        td=contribuidor.dataValues.email
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                a(href='/admin/contribuidores/eliminar/'+contribuidor.dataValues.id type="button" class="btn btn-danger")=Borrar
                                a(href='/admin/contribuidores/editar/'+contribuidor.dataValues.id type="button" class="btn btn-warning")=Editar
                            </div>
                        </td>
                    </tr>
                
            </tbody>
        </table>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-auto">
                <a href="/admin/contribuidores/agregar" type="button" class="btn btn-dark"><i class="fas fa-plus"></i>agregar</a>
            </div>
        </div>
    </div>